{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Login</h1>

                <form method="post" action="/user/login" novalidate>
                    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
                    <div class="form-group mt-3">
                        <label for="email">Email:</label>
                        {{with .Form.Errors.Get "email"}}
                            <lable class="text-danger">{{.}}</lable>
                        {{end}}
                        {{/* Если при попытке получить ошибку по ключу (полю) first_name мы получаем ошибку то добавляем класс is_invalid */}}
                        <input class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{ end }}"
                               id="email" autocomplete="off" type='email'
                                {{/* с помощью значения указанного в value при первой неудачной отправке формы, данные в полях уже будут сохраненны */}}
                               name='email' value="" required>
                    </div>

                    <div class="form-group mt-3">
                        <label for="password">Password:</label>
                        {{with .Form.Errors.Get "password"}}
                            <lable class="text-danger">{{.}}</lable>
                        {{end}}
                        {{/* Если при попытке получить ошибку по ключу (полю) first_name мы получаем ошибку то добавляем класс is_invalid */}}
                        <input class="form-control {{with .Form.Errors.Get "password"}} is-invalid {{ end }}"
                               id="password" autocomplete="off" type='password'
                                {{/* с помощью значения указанного в value при первой неудачной отправке формы, данные в полях уже будут сохраненны */}}
                               name='password' value="" required>
                    </div>

                    <hr>

                    <input type="submit" class="btn btn-primary" value="Submit">
                </form>

            </div>
        </div>
    </div>
{{end}}
